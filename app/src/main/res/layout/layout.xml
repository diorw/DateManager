<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/task_toolbar"
        android:layout_height="?attr/actionBarSize"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="format_title"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"

            android:id="@+id/titleicon"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/tasktitle_set"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="标题"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="clock_start"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"

            android:id="@+id/starticon"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:editable="false"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:id="@+id/starttime"
                android:hint="开始时间"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="clock_end"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"

            android:id="@+id/endicon"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:editable="false"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:id="@+id/endtime"
                android:hint="结束时间"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.gc.materialdesign.views.CheckBox
            android:id="@+id/checkboxAlarm"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            materialdesign:check="true"
            />
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="闹钟提醒我"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:materialIcon="clock"
            app:materialIconColor="#ADADAD"
            app:materialIconSize="24dp"
            android:scaleType="center"


            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:editable="false"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:id="@+id/remind_time"
                android:hint="提醒时间"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


    </LinearLayout>
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:elevation="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:alpha="0.87"
        android:text="任务描述"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">
        <EditText
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:gravity="top"
            android:background="@null"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

</LinearLayout>
